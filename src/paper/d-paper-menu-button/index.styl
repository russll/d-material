.d-paper-menu-button 
  display inline-block
  padding 8px
  position relative
  background-image none
  outline none
  user-select none
  -webkit-user-select none
  cursor pointer
  overflow hidden
  &.disabled
    cursor auto
    &:hover
      .d-core-icon svg
        transform none
        -webkit-transform none
    .d-core-icon path
      fill #c9c9c9
  &:hover
    .d-core-icon svg
      transform scale(1.2)
      -webkit-transform scale(1.2)

  &.right-align .paper-menu-button-overlay-ink
    left auto
    right 0

  .d-core-icon
    position relative
    svg
      transition transform 0.2s cubic-bezier(0.4, 0, 0.2, 1)
      -webkit-transition -webkit-transform 0.2s cubic-bezier(0.4, 0, 0.2, 1)
      transform-origin 50% 50%
      -webkit-transform-origin 50% 50%

  .overlay
    display block
      position fixed
    border-radius 3px

  .paper-menu-button-overlay-ink
      position absolute
      top 0
      left 0
      width 40px
      height 40px
      border-radius 20px
    background #fff
    opacity 0
    transform scale(0)
    -webkit-transform scale(0)

  .paper-menu-button-overlay-bg
      position absolute
      top 0
      left 0
      bottom 0
      right 0
      border-radius 3px
    background #fff
    opacity 0

  .menu
    position relative
    margin 0

